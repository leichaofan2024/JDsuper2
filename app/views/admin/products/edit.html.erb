<div class="col-md-10">
  <%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
      <%= f.input :title  %>
    </div>
    <div class="group">
      <%= f.input :description %>
    </div>
    <div class="group">
      <%= f.input :price  %>
    </div>
    <div class="group">
      <%= f.input :quantity %>
    </div>
    <% if @product.photos.present? %>
      <span>目前商品图</span> <br>
      <% @product.photos.each do |p|%>
      <%= image_tag(p.image.thumb.url)%>
      <% end %>
    <div class="group">
      <%= f.file_field :avatar, multiple: true, name:"photos[:avatar][]" %>
    </div>
    <%= f.submit "submit", date: {disable_with: "Submitting..."} %>
  <% end %>
</div>
